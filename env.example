# Database Configuration
# For development (SQLite)
DATABASE_URL="file:./dev.db"

# For production (PostgreSQL)
# DATABASE_URL="postgresql://username:password@localhost:5432/dreamery_professional_support"

# For development with PostgreSQL
# DATABASE_URL="postgresql://postgres:password@localhost:5432/dreamery_dev"

# Environment
NODE_ENV="development"

# Server Configuration
PORT=3000
HOST="localhost"

# Security
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
SESSION_SECRET="your-session-secret-key-change-in-production"

# External Services (if needed)
# AWS_S3_BUCKET="your-s3-bucket"
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"

# Data Integration APIs
# Census API (optional but recommended for higher rate limits)
REACT_APP_CENSUS_API_KEY="your-census-api-key-here"

# County Assessor APIs (if required by specific counties)
REACT_APP_COUNTY_API_KEY="your-county-api-key-here"

# Enable/disable data adapters
REACT_APP_CENSUS_ENABLED=true
REACT_APP_COUNTY_ASSESSOR_ENABLED=true
REACT_APP_ZILLOW_ENABLED=true
REACT_APP_REALTOR_ENABLED=true
REACT_APP_MLS_ENABLED=true

# Apple Maps Configuration
# Get your JWT token from Apple Developer Console
# REACT_APP_APPLE_MAPS_JWT_TOKEN="your-apple-maps-jwt-token"

# Email Service (if needed)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# Logging
LOG_LEVEL="debug"
